{
  "account": {
    "name": "coohu",
    "token": "${GITHUB_TOKEN_PERSONAL}",
    "repos": [
      {"upstream":"/lich0821/WeChatFerry:master","fork":"/coohu/WeChatFerry:dev"},
      {"upstream":"/ttttupup/wxhelper:main","fork":"/coohu/wxhelper:dev"}
    ]
  },
  "email": {
    "smtpHost": "smtp.example.com",
    "smtpPort": 587,
    "user": "noreply@example.com",
    "pass": "${SMTP_PASSWORD}",
    "from": "noreply@example.com",
    "to": [
      "devteam@example.com",
      "manager@example.com"
    ]
  },
  "schedule": "0 4 * * *",
  "logOptions": {
    "level": "${LOG_LEVEL}",
    "outputFile": "logs/sync-log.txt",
    "enableConsole": true
  },
  "llm": {
    "provider": "openai",
    "model": "gpt-4",
    "url": "https://api.openai.com/v1/chat/completions",
    "apiKey": "${OPENAI_API_KEY}",
    "maxRetries": 3
  },
  "reposBaseDir": "${REPOS_BASE_DIR}",
  "maxMergeRetries": 3,
  "runTestsAfterMerge": true,
  "sendMailOnFailure": true,
  "sendDailyReport": true
}
